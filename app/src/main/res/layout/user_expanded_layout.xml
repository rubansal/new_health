<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="40dp"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/accountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACCOUNT"
            android:textSize="16sp"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/accountTextView"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:padding="7dp"
                android:src="@drawable/user_profile_icon"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

            <LinearLayout
                android:id="@+id/getHealthPlanLayoutBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2.2"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="1"
                    android:layout_weight="0.99">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="GET HEALTH PLANS"
                        android:textSize="15sp"
                        android:textColor="#EEEEEE"
                        android:gravity="center_vertical"
                        android:layout_weight="0.8"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/next_icon_user"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.01"
                    android:layout_marginEnd="10dp"
                    android:background="#fff"/>

            </LinearLayout>

            </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:padding="7dp"
                android:src="@drawable/user_profile_icon"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

            <LinearLayout
                android:id="@+id/goalLayoutBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2.2"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="1"
                    android:layout_weight="0.99">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="GOAL"
                        android:textSize="15sp"
                        android:textColor="#EEEEEE"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="LOSE WEIGHT"
                        android:textSize="15sp"
                        android:textColor="#EEEEEE"
                        android:gravity="end|center"
                        android:layout_weight="0.8"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:layout_weight="0.2"
                        android:backgroundTint="#fff"
                        android:src="@drawable/next_icon_user"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.01"
                    android:background="#fff"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/currentPlanTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CURRENT PLAN"
            android:textSize="16sp"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/currentPlanTextView"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:padding="7dp"
                android:src="@drawable/user_profile_icon"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

            <LinearLayout
                android:id="@+id/currentPlanLayoutBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2.2"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="1"
                    android:layout_weight="0.99">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Class Dieting"
                        android:textSize="15sp"
                        android:textColor="#EEEEEE"
                        android:gravity="center_vertical"
                        android:layout_weight="0.8"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:layout_weight="0.2"
                        android:backgroundTint="#fff"
                        android:src="@drawable/next_icon_user"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.01"
                    android:background="#fff"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/completeProfileTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPLETE YOUR PROFILE"
            android:textSize="16sp"
            android:textColor="#fff"/>

        <LinearLayout
            android:id="@+id/enableNotificationLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/completeProfileTextView"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.99">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Enable notifications"
                    android:textSize="15sp"
                    android:paddingStart="10dp"
                    android:textColor="#EEEEEE"
                    android:gravity="center_vertical"
                    android:layout_weight="0.85"/>

                <ImageView
                    android:id="@+id/enableNotificationBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="23dp"
                    android:paddingBottom="23dp"
                    android:layout_weight="0.15"
                    android:backgroundTint="#fff"
                    android:src="@drawable/add_icon_user"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.01"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#fff"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/exerciseTrackingLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/enableNotificationLayout"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.99">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Automatic exercise tracking"
                    android:textSize="15sp"
                    android:paddingStart="10dp"
                    android:textColor="#EEEEEE"
                    android:gravity="center_vertical"
                    android:layout_weight="0.85"/>

                <ImageView
                    android:id="@+id/exerciseTrackingBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="23dp"
                    android:paddingBottom="23dp"
                    android:layout_weight="0.15"
                    android:backgroundTint="#fff"
                    android:src="@drawable/add_icon_user"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.01"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#fff"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/connectAccLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/exerciseTrackingLayout"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.99">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Connect your account"
                    android:textSize="15sp"
                    android:paddingStart="10dp"
                    android:textColor="#EEEEEE"
                    android:gravity="center_vertical"
                    android:layout_weight="0.85"/>

                <ImageView
                    android:id="@+id/connectAccBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="23dp"
                    android:paddingBottom="23dp"
                    android:layout_weight="0.15"
                    android:backgroundTint="#fff"
                    android:src="@drawable/add_icon_user"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.01"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#fff"/>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>